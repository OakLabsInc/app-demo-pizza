body, html
  *
    outline: none;
    box-sizing: border-box;
  background-color #FFFFFF
  .md-toolbar-tools
    display flex
  md-content::before
    content: " ";
    position: absolute;
    top: 0; 
    left: 0;
    width: 100%; 
    height: 100%;  
    opacity: .4; 
    z-index: -1;

    background-image url(images/pizza.jpg)
    background-repeat no-repeat
    background-size cover
    background-position center
    background-color rgba(255,255,255,.5)
  md-content
    position: relative;
    z-index: 1;
    h2
      color #000000
    md-card
      flex-wrap wrap
      border 3px solid transparent
      md-card-title
        pointer-events none
        *
          pointer-events none
      .item-media
        background-repeat no-repeat
        background-size cover
        background-position center
        &.small,&.medium,&.large
          background-size contain
      &.selected
        border 3px solid green
.invisible
  visibility hidden
ripples
  position absolute
  height 100%
  width 100%
  top 0
  left 0
  pointer-events none
  z-index 999

makeRipple(size = 1em, duration = .7s, count = infinite, thickness = 2px, delay = 0s)
  position absolute
  width size
  height size
  margin-top size * -.5
  margin-left size * -.5
  border thickness solid rgba(#222, .7)
  border-radius 50%
  opacity 0
  animation-name rippleOut
  animation-duration duration
  animation-timing-function ease-out
  animation-iteration-count count
  animation-delay delay
  animation-fill-mode forwards

.ripple
  makeRipple(count: 1)

@keyframes rippleOut
  0%
    transform rotate(45deg) scale(.2)
    opacity: 0
  50%
    opacity 1
  100% 
    transform rotate(45deg) scale(2.2)
    opacity 0