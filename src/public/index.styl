body, html

  background-color rgb(249,249,249)
  overflow hidden
  *
    outline: none
    box-sizing: border-box
  
  .md-toolbar-tools
    display flex
  .logo-container
    background-color transparent
    .logo
      background-image url(images/logo.png)
      background-repeat no-repeat
      background-size cover
      width 300px
      height 300px

  md-content::before
    content: " ";
    position: absolute;
    top: 0; 
    left: 0;
    width: 100%; 
    height: 100%;  
    opacity: .4; 
    z-index: -1;

    background-image url(images/pizza.jpg)
    background-repeat no-repeat
    background-size cover
    background-position 45% 130px 
    background-color rgba(255,255,255,.5)
  md-content
    background-color transparent
    position: relative;
    z-index: 1;
    h2
      color #000000
    md-card
      flex-wrap wrap
      border 3px solid transparent
      pointer-events auto
      &.no-click
        pointer-events none
      *
        pointer-events none
      md-card-title
        pointer-events none
      .item-media
        background-repeat no-repeat
        background-size cover
        background-position center
        &.small,&.medium,&.large
          background-size contain
        &.medium
          height 200px
          width 200px
        &.large
          height 250px
          width 250px
      &.selected
        border 3px solid green
        background-color rgba(228,126,35,.85)
        color #ffffff
.invisible
  visibility hidden
ripples
  position absolute
  height 100%
  width 100%
  top 0
  left 0
  pointer-events none
  z-index 999

makeRipple(size = 1em, duration = .7s, count = infinite, thickness = 2px, delay = 0s)
  position absolute
  width size
  height size
  margin-top size * -.5
  margin-left size * -.5
  border thickness solid rgba(#222, .7)
  border-radius 50%
  opacity 0
  animation-name rippleOut
  animation-duration duration
  animation-timing-function ease-out
  animation-iteration-count count
  animation-delay delay
  animation-fill-mode forwards

.ripple
  makeRipple(count: 1)

@keyframes rippleOut
  0%
    transform rotate(45deg) scale(.2)
    opacity: 0
  50%
    opacity 1
  100% 
    transform rotate(45deg) scale(2.2)
    opacity 0